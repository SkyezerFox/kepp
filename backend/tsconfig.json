{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "dist",

		"baseUrl": "./src",

		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
